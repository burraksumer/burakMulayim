---
// lib imports
import { Icon } from "astro-icon";

// util imports
import { slugify, formatDate } from "../js/utils";

const { relatedPosts } = Astro.props;
---

{
  relatedPosts.map((post) => (
    <a
      href={post.url}
      class="flex flex-col justify-between p-8 mx-10 my-10 no-underline transition-shadow dark:bg-neutral-700 bg-gray-50 rounded-sm shadow-xl group hover:shadow-lg"
    >
      <div>
        <h3 class="text-xl font-bold dark:text-gray-200">
          {post.frontmatter.title}
        </h3>
        <div class="pt-2 mt-4 border-t-2 border-gray-50">
          <p class="text-sm font-medium tracking-widest dark:text-gray-300 text-gray-500 uppercase">
            {post.frontmatter.author} â€¢ {formatDate(post.frontmatter.date)}
          </p>
          <p class="text-sm font-medium tracking-widest text-gray-500 dark:text-gray-300 uppercase">
            {post.frontmatter.description}
          </p>
        </div>
      </div>

      <div class="inline-flex items-center mt-0 dark:text-gray-300">
        <p class="text-lg font-medium">Read more</p>

        <Icon
          class="w-6 h-6 ml-3 transition-transform transform group-hover:translate-x-3"
          name="tabler:chevron-right"
          height="24"
          widht="24"
        />
      </div>
    </a>
  ))
}
