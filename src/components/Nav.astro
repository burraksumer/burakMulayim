---
//library imports
import { Icon } from "astro-icon";

//data imports
import navData from "../data/navData";
---

<header aria-label="Site Header" class="py-8 dark:bg-neutral-700 bg-gray-50">
  <div class="max-w-screen-xl px-4 mx-auto sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex-1 md:flex md:items-center md:gap-12">
        <a class="block" href="/">
          <span class="sr-only">Home</span>
          <!-- <Icon name="favicon" width="50" /> -->
          <span class="font-bold text-2xl mr-5 dark:text-gray-200"
            >Burak SÃ¼mer</span
          >
        </a>
      </div>

      <div class="md:flex md:items-center md:gap-12">
        <!-- Desktop Nav -->
        <nav aria-label="Site Nav" class="inline-block">
          <ul class="md:flex items-center gap-6 text-sm hidden">
            {
              navData.map((item) => (
                <a
                  href={item.path}
                  class="text-gray-500 transition navlink hover:text-gray-500/75 hover:-translate-y-0.5 first:hidden sm:first:inline-block hidden md:flex dark:text-gray-300 dark:hover:text-gray-200"
                  rel="prefetch"
                >
                  {item.name}
                </a>
              ))
            }
          </ul>
        </nav>
        <!-- Mobile Nav -->
      </div>
      <nav aria-label="Site Nav" class="inline-block">
        <div
          id="hamburger-btn"
          class="md:hidden p-4 space-y-2 dark:bg-neutral-900 bg-gray-500 rounded shadow align-center"
        >
          <span class="block w-8 h-0.5 bg-gray-50 dark:bg-gray-300"></span>
          <span class="block w-8 h-0.5 bg-gray-50 dark:bg-gray-300"></span>
          <span class="block w-8 h-0.5 bg-gray-50 dark:bg-gray-300"></span>
        </div>
      </nav>
    </div>
  </div>
  <div
    id="mobile-nav-menu"
    class="invisible fixed w-screen z-50 dark:text-gray-200 dark:bg-neutral-900 bg-gray-100 mt-8 min-h-screen transition-opacity opacity-0 duration-300"
  >
    <ul
      id="nav-ul"
      class="flex items-center gap-6 flex-col text-3xl justify-center text-center min-h-screen"
    >
      {
        navData.map((item) => (
          <a href={item.path} class="text-gray-500 navlink" rel="prefetch">
            {item.name}
          </a>
        ))
      }
    </ul>
  </div>
</header>

<script>
  import "../js/nav.js";
</script>
