---
//library imports
import { Icon } from "astro-icon";
---

<footer
  aria-label="Site Footer"
  class="inset-x-0 bottom-0 bg-gray-50 dark:bg-neutral-700"
>
  <div class="max-w-screen-xl px-4 py-8 mx-auto sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center sm:justify-between">
      <div class="flex justify-center sm:justify-start">
        <a href="/"><Icon name="favicon" width="50" /></a>
      </div>

      <p
        class="mt-4 text-sm text-center text-gray-500 dark:text-gray-200 lg:mt-0 lg:text-center"
      >
        Copyright &copy; <span id="copyright"></span> | All rights reserved.
      </p>
      <p
        class="mt-4 text-sm text-center text-gray-500 dark:text-gray-200 lg:mt-0 lg:text-right"
      >
        <a href="/rss.xml" target="_blank">
          RSS Feed
          <Icon class="inline" name="tabler:rss" width="17" height="17" />
        </a>
      </p>
    </div>
  </div>
</footer>

<script>
  document.querySelector("#copyright").textContent = new Date()
    .getFullYear()
    .toString();
</script>
